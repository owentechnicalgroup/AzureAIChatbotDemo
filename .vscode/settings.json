{
  // Python Extension Configuration
  "python.defaultInterpreterPath": "./venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,

  // Testing Configuration
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["tests", "--tb=short", "-v"],

  // Test Discovery
  "python.testing.cwd": "${workspaceFolder}",
  "python.testing.autoTestDiscoverOnSaveEnabled": true,

  // Code Coverage (optional)
  "python.testing.debugPort": 3000,

  // Pytest specific settings
  "python.testing.pytestPath": "./venv/Scripts/pytest.exe",

  // File associations for better test recognition
  "files.associations": {
    "test_*.py": "python",
    "**/tests/**/*.py": "python"
  },

  // Python analysis settings
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",

  // Editor settings for testing
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // Test output settings
  "python.testing.showTestToolbar": true,
  "python.testing.displayOptionalTests": true
}
